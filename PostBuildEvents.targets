<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <PostBuildEvent>
		if not exist "$(SolutionDir)..\QModZips\$(GameName)" mkdir "$(SolutionDir)..\QModZips\$(GameName)"
		powershell Compress-Archive -Path '$(TargetDir)' -DestinationPath '$(SolutionDir)..\QModZips\$(GameName)\$(ProjectName)$(Configuration).zip' -Force

		if not exist "$(GameDir)\QMods\$(ProjectName)" mkdir "$(GameDir)\QMods\$(ProjectName)"
		xcopy  /q/y/i "$(TargetDir)" "$(GameDir)\QMods\$(ProjectName)\" /E /H /C
	</PostBuildEvent>
  </PropertyGroup>
</Project>